# ğŸ§¾ PYTHON LOOPS CHEAT SHEET (Lessons 1â€“12)
# ----------------------------------------

# ğŸ¥‡ LESSON 1: Basic for Loop
for i in range(5):
    print(i)     # 0 1 2 3 4

# ----------------------------------------

# ğŸ”¢ LESSON 2: Looping Through a List
foods = ["adobo", "sinigang", "tinola"]

for food in foods:
    print(food)

# ----------------------------------------

# ğŸ” LESSON 3: Looping With Index
foods = ["adobo", "sinigang", "tinola"]

for i in range(len(foods)):
    print(i, foods[i])

# ----------------------------------------

# ğŸ§® LESSON 4: range() Variations
for i in range(3, 10):
    print(i)    # 3 to 9

for i in range(0, 20, 2):
    print(i)    # even numbers

for i in range(10, 0, -1):
    print(i)    # countdown

# ----------------------------------------

# ğŸ”„ LESSON 5: while Loop
i = 0
while i < 5:
    print(i)
    i += 1

# ----------------------------------------

# â›” LESSON 6: break Statement
for i in range(10):
    if i == 5:
        break
    print(i)

# ----------------------------------------

# â†©ï¸ LESSON 7: continue Statement
for i in range(6):
    if i == 3:
        continue
    print(i)

# ----------------------------------------

# âœ… LESSON 8: else With Loops
for i in range(5):
    print(i)
else:
    print("Loop finished!")   # runs if no break

# ----------------------------------------

# ğŸ§± LESSON 9: Nested Loops
for i in range(3):
    for j in range(3):
        print(i, j)

# ----------------------------------------

# â­ LESSON 10: Pattern Loops
# Triangle
for i in range(1, 6):
    print("*" * i)

# Inverted Triangle
for i in range(5, 0, -1):
    print("*" * i)

# ----------------------------------------

# ğŸ“¦ LESSON 11: Looping Through Strings
word = "Python"

for letter in word:
    print(letter)

# ----------------------------------------

# ğŸ—‚ï¸ LESSON 12: Looping Through Dictionaries
student = {"name": "Mark", "age": 18}

for key in student:
    print(key, student[key])

for key, value in student.items():
    print(key, value)

# ----------------------------------------
