# ğŸ§¾ TKINTER CHEAT SHEET (Complete Essentials)
# ----------------------------------------

# ğŸ“¦ LESSON 1: Basic Imports (All Libraries)
import tkinter as tk
from tkinter import *
from tkinter import messagebox
from tkinter import ttk
from tkinter import filedialog
from tkinter import colorchooser

# ----------------------------------------

# ğŸªŸ LESSON 2: Creating a Window
root = Tk()
root.title("My Tkinter App")
root.geometry("500x400")
root.resizable(False, False)
root.mainloop()

# ----------------------------------------

# ğŸ”˜ LESSON 3: Buttons & Commands
def on_click():
    print("Button clicked!")

btn = Button(root, text="Click Me", command=on_click)
btn.pack()

# ----------------------------------------

# ğŸ“ LESSON 4: Labels, Entry, Text
label = Label(root, text="Enter your name:")
label.pack()

entry = Entry(root)
entry.pack()

big_text = Text(root, height=5, width=30)
big_text.pack()

# ----------------------------------------

# ğŸ“ LESSON 5: Layout Managers (pack, grid, place)

# pack
Button(root, text="Pack Demo").pack()

# grid
Label(root, text="Username").grid(row=0, column=0)
Entry(root).grid(row=0, column=1)

# place
Button(root, text="Place Demo").place(x=50, y=50)

# ----------------------------------------

# âœ… LESSON 6: Checkbutton, Radiobutton
chk_var = IntVar()
chk = Checkbutton(root, text="I Agree", variable=chk_var)
chk.pack()

gender = StringVar()
Radiobutton(root, text="Male", value="M", variable=gender).pack()
Radiobutton(root, text="Female", value="F", variable=gender).pack()

# ----------------------------------------

# ğŸ§¾ LESSON 7: Combobox (ttk)
combo = ttk.Combobox(root, values=["Option 1", "Option 2", "Option 3"])
combo.current(0)
combo.pack()

# ----------------------------------------

# ğŸ”½ LESSON 8: Listbox
lb = Listbox(root)
lb.insert(1, "Apple")
lb.insert(2, "Banana")
lb.insert(3, "Orange")
lb.pack()

# ----------------------------------------

# ğŸ“Š LESSON 9: Treeview (Table)
tree = ttk.Treeview(root, columns=("Name", "Age"), show="headings")
tree.heading("Name", text="Name")
tree.heading("Age", text="Age")
tree.insert("", "end", values=("Mark", 20))
tree.pack()

# ----------------------------------------

# ğŸ–¼ï¸ LESSON 10: Frames & Separators
frame = Frame(root, bg="lightgray", width=200, height=100)
frame.pack()

sep = ttk.Separator(root, orient="horizontal")
sep.pack(fill="x")

# ----------------------------------------

# ğŸ›ï¸ LESSON 11: Sliders & Spinbox
scale = Scale(root, from_=0, to=100, orient=HORIZONTAL)
scale.pack()

spin = Spinbox(root, from_=1, to=10)
spin.pack()

# ----------------------------------------

# ğŸ”” LESSON 12: Message Boxes
messagebox.showinfo("Info", "This is an info message")
messagebox.showwarning("Warning", "Be careful!")
messagebox.showerror("Error", "Something went wrong")

# ----------------------------------------

# ğŸ“ LESSON 13: File Dialogs
file = filedialog.askopenfilename()
folder = filedialog.askdirectory()
save_file = filedialog.asksaveasfilename()

# ----------------------------------------

# ğŸ¨ LESSON 14: Color Picker
color = colorchooser.askcolor()

# ----------------------------------------

# ğŸ–¼ï¸ LESSON 15: Images (PhotoImage)
img = PhotoImage(file="logo.png")
label = Label(root, image=img)
label.pack()

# ----------------------------------------

# ğŸ§­ LESSON 16: Menus
menu = Menu(root)
root.config(menu=menu)

file_menu = Menu(menu, tearoff=0)
menu.add_cascade(label="File", menu=file_menu)
file_menu.add_command(label="Open")
file_menu.add_separator()
file_menu.add_command(label="Exit", command=root.quit)

# ----------------------------------------

# ğŸ“Œ LESSON 17: TopLevel Windows (New Window)
def open_window():
    new = Toplevel(root)
    new.title("New Window")
    new.geometry("300x200")

Button(root, text="Open Window", command=open_window).pack()

# ----------------------------------------

# ğŸ”„ LESSON 18: After() â€“ Timers
def tick():
    print("Tick...")
    root.after(1000, tick)

root.after(1000, tick)

# ----------------------------------------

# ğŸ–±ï¸ LESSON 19: Mouse & Keyboard Events
def key_pressed(event):
    print("You pressed:", event.char)

root.bind("<Key>", key_pressed)

def mouse_clicked(event):
    print("Mouse at:", event.x, event.y)

root.bind("<Button-1>", mouse_clicked)

# ----------------------------------------

# âœ¨ LESSON 20: Styling with ttk.Style
style = ttk.Style()
style.configure("TButton", font=("Arial", 12), padding=6)

btn = ttk.Button(root, text="Styled Button")
btn.pack()

# ----------------------------------------

# ğŸš€ LESSON 21: Mainloop Structure (Final Template)
if __name__ == "__main__":
    root = Tk()
    root.title("Tkinter App")
    root.geometry("400x300")
    root.mainloop()

# ----------------------------------------
