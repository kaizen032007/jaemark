# ğŸ¥‡ LESSON 1: Creating a Class
class Student:
    def __init__(self):
        self.name = ""
        self.age = 0

# ----------------------------------------

# ğŸ§ LESSON 2: Creating Objects
s1 = Student()
s1.name = "Jaemark"
s1.age = 18

# ----------------------------------------

# ğŸ—ï¸ LESSON 3: Constructors (__init__)
class Student:
    def __init__(self, name, age):
        self.name = name
        self.age = age

s1 = Student("Mark", 20)

# ----------------------------------------

# ğŸ”’ LESSON 4: Encapsulation (Private Variables)
class BankAccount:
    def __init__(self):
        self.__balance = 0   # private variable

    def set_balance(self, b):
        self.__balance = b

    def get_balance(self):
        return self.__balance

# ----------------------------------------

# ğŸ“¦ LESSON 5: Methods
class MathTools:
    def add(self, a, b):
        return a + b

m = MathTools()
print(m.add(5, 10))    # 15

# ----------------------------------------

# ğŸ­ LESSON 6: Method Overloading (Python Style)
# Python does NOT support overloading directly.
# You simulate it using default parameters.

class Calculator:
    def add(self, a, b=0):
        return a + b

c = Calculator()
print(c.add(5))        # 5
print(c.add(5, 3))     # 8

# ----------------------------------------

# ğŸ¶ LESSON 7: Inheritance
class Animal:
    def eat(self):
        print("Eating...")

class Dog(Animal):
    def bark(self):
        print("Barking...")

d = Dog()
d.eat()
d.bark()

# ----------------------------------------

# âœï¸ LESSON 8: Method Overriding
class Animal:
    def sound(self):
        print("Animal sound")

class Cat(Animal):
    def sound(self):
        print("Meow!")

c = Cat()
c.sound()

# ----------------------------------------

# ğŸ§¬ LESSON 9: super() Keyword
class Animal:
    def sound(self):
        print("Animal sound")

class Dog(Animal):
    def sound(self):
        super().sound()
        print("Woof!")

d = Dog()
d.sound()

# ----------------------------------------

# ğŸ¨ LESSON 10: Abstraction (ABC Module)
from abc import ABC, abstractmethod

class Shape(ABC):
    @abstractmethod
    def draw(self):
        pass

class Circle(Shape):
    def draw(self):
        print("Drawing circle...")

# ----------------------------------------

# ğŸ”· LESSON 11: Multiple Inheritance
class A:
    def showA(self):
        print("A")

class B:
    def showB(self):
        print("B")

class C(A, B):
    pass

c = C()
c.showA()
c.showB()

# ----------------------------------------

# ğŸ§© LESSON 12: Polymorphism
class Animal:
    def sound(self):
        print("Animal sound")

class Dog(Animal):
    def sound(self):
        print("Woof!")

class Cat(Animal):
    def sound(self):
        print("Meow!")

animals = [Dog(), Cat()]

for a in animals:
    a.sound()

# ----------------------------------------
